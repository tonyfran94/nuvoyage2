        // Page navigation functions
        function showMainPage() {
            document.getElementById('mainPage').classList.add('active');
            document.getElementById('searchPage').classList.remove('active');
            // Reset search results
            document.getElementById('resultsSection').style.display = 'none';
        }
        
        function showSearchPage() {
            document.getElementById('mainPage').classList.remove('active');
            document.getElementById('searchPage').classList.add('active');
        }
        
        function scrollToDestinations() {
            document.getElementById('destinationsSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function selectDestination(destinationCode) {
            // Set the destination and go to search page
            showSearchPage();
            document.getElementById('to').value = destinationCode;
        }
        
        function searchFlights() {
            const from = document.getElementById('from').value;
            const to = document.getElementById('to').value;
            const departure = document.getElementById('departure').value;
            const passengers = document.getElementById('passengers').value;
            const flightClass = document.getElementById('class').value;
            
            const route = `${from}-${to}`;
            const flights = flightData.routes[route] || [];
            
            // Show results section
            document.getElementById('resultsSection').style.display = 'block';
            
            // Update search summary
            const fromName = document.getElementById('from').selectedOptions[0].text;
            const toName = document.getElementById('to').selectedOptions[0].text;
            document.getElementById('searchSummary').textContent = 
                `${fromName} ‚Üí ${toName} ‚Ä¢ ${new Date(departure).toLocaleDateString()} ‚Ä¢ ${passengers} passenger(s) ‚Ä¢ ${flightClass}`;
            
            // Generate flight results
            const resultsContainer = document.getElementById('flightResults');
            
            if (flights.length === 0) {
                resultsContainer.innerHTML = `
                    <div class="flight-card">
                        <p style="text-align: center; color: #666; font-size: 18px;">
                            No direct flights found for this route. Please try different destinations or contact our support team.
                        </p>
                    </div>
                `;
                return;
            }
            
            resultsContainer.innerHTML = flights.map(flight => {
                const airline = flightData.airlines[flight.airline];
                const details = flightData.flightDetails[flight.airline];
                const classMultiplier = {
                    'economy': 1,
                    'premium': 1.5,
                    'business': 2.5,
                    'first': 4
                };
                const finalPrice = Math.round(flight.price * classMultiplier[flightClass]);
                
                return `
                    <div class="flight-card">
                        <div class="flight-header">
                            <div class="airline-info">
                                <div class="airline-logo">${airline.logo}</div>
                                <div>
                                    <div style="font-weight: bold;">${airline.name}</div>
                                    <div style="color: #666; font-size: 14px;">${flight.stops || 'Direct flight'}</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="flight-details">
                            <div class="departure">
                                <div class="time">${flight.departure}</div>
                                <div class="airport">${from}</div>
                            </div>
                            
                            <div class="flight-path">
                                <div class="duration">${flight.duration}</div>
                                <div class="path-line"></div>
                            </div>
                            
                            <div class="arrival">
                                <div class="time">${flight.arrival}</div>
                                <div class="airport">${to}</div>
                            </div>
                        </div>
                        
                        <div class="flight-details-section">
                            <div class="details-grid">
                                <div class="detail-item">
                                    <div class="detail-label">Aircraft</div>
                                    <div class="detail-value">${details.aircraft}</div>
                                </div>
                                <div class="detail-item">
                                    <div class="detail-label">Baggage</div>
                                    <div class="detail-value">${details.baggage}</div>
                                </div>
                                <div class="detail-item">
                                    <div class="detail-label">Meal</div>
                                    <div class="detail-value">${details.meal}</div>
                                </div>
                                <div class="detail-item">
                                    <div class="detail-label">WiFi</div>
                                    <div class="detail-value">${details.wifi}</div>
                                </div>
                            </div>
                            <div class="amenities">
                                ${details.amenities.map(amenity => `<span class="amenity-tag">${amenity}</span>`).join('')}
                            </div>
                        </div>
                        
                        <div class="flight-footer">
                            <div class="price">Rs ${finalPrice.toLocaleString()}</div>
                            <button class="book-btn" onclick="openBookingModal('${airline.name}', '${flight.departure}', '${flight.arrival}', '${finalPrice}', '${from}', '${to}')">
                                Book Now
                            </button>
                        </div>
                    </div>
                `;
            }).join('');
            
            // Scroll to results
            document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function openBookingModal(airline, departure, arrival, price, from, to) {
            document.getElementById('selectedFlight').textContent = 
                `${airline} ‚Ä¢ ${departure} - ${arrival} ‚Ä¢ ${from} ‚Üí ${to} ‚Ä¢ Rs ${parseInt(price).toLocaleString()}`;
            document.getElementById('bookingModal').style.display = 'block';
        }
        
        function closeBookingModal() {
            document.getElementById('bookingModal').style.display = 'none';
        }
        
        // Handle booking form submission
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simulate booking process
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            
            // Create confirmation message
            const confirmationDiv = document.createElement('div');
            confirmationDiv.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: white;
                padding: 40px;
                border-radius: 20px;
                box-shadow: 0 20px 40px rgba(0,0,0,0.3);
                text-align: center;
                z-index: 1001;
                max-width: 400px;
                width: 90%;
            `;
            
            const bookingRef = 'MF' + Math.random().toString(36).substr(2, 8).toUpperCase();
            
            confirmationDiv.innerHTML = `
                <div style="color: #28a745; font-size: 48px; margin-bottom: 20px;">‚úÖ</div>
                <h2 style="color: #333; margin-bottom: 15px;">Booking Confirmed!</h2>
                <p style="color: #666; margin-bottom: 20px;">
                    Thank you ${firstName} ${lastName}! Your flight has been booked successfully.
                </p>
                <div style="background: #f8f9fa; padding: 15px; border-radius: 10px; margin-bottom: 20px;">
                    <strong>Booking Reference: ${bookingRef}</strong>
                </div>
                <p style="color: #666; font-size: 14px; margin-bottom: 20px;">
                    A confirmation email has been sent to your email address with your e-ticket and booking details.
                </p>
                <button onclick="this.parentElement.remove(); closeBookingModal();" 
                        style="background: #667eea; color: white; border: none; padding: 12px 30px; border-radius: 25px; cursor: pointer;">
                    Close
                </button>
            `;
            
            document.body.appendChild(confirmationDiv);
        });
        
        // Close modal when clicking outside
        document.getElementById('bookingModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeBookingModal();
            }
        });
    </script>
